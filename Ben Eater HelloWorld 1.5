Packaging Assembly language :

PORT B = $6000
PORT A = $6001
DDRB = $6002
DDRA = $6003

E = %10000000
RW = %01000000
RS = %00100000

 .org $8000
reset :
  lda #%11111111      ; Set all pins on port B to output 
  sta DDRB
  lda #%11100000      ; Set top 3 pins on port A to output 
  sta DDRA
  
  lda #%00111000      ; Set 8-bit mode; 2-line display 5x8 font
  jsr(20) lcd_instruction
  lda #%00001110      ; Display on; cursor on; blink off 
  jsr lcd_instruction
  lda #%00000110      ; Increment and shift cursor; don't shift display 
  jsr lcd_instruction
  
  lda #"H"
  jsr print_char 
  lda #"e"
  jsr print_char  
  lda #"l"
  jsr print_char 
  lda #"l"
  jsr print_char 
  lda #"o"
  jsr print_char 
  
loop:
  jump loop     ($8005) 

lcd_instruction(805d) :   
  sta(8d) PORT B
  lda #0              ; Clear RS/RW/E bits 
  sta PORT A 
  lda #E              ; Set E bit to send instruction 
  sta PORT A 
  lda #0              ; Clear RS/RW/E bits 
  sta PORT A 
  rts(60)   (0124 R 5d
            (0124 W 80   
            (0123 W 0e) Processor takes fews clock cycle to 
                        save "Return Address" now we need
                        RAM to capture Output of Processor 
            (0122 r 8d
            (0123 r 8d
            (0124 r 8d) Processor tries to find the Return Address
                        but it can't read back the same Address 
                        that's why our programme doesn't work
                        no Hardware responds to the Address 
                  
print_char :
  sta PORT B
  lda #RS             ; Set RS; Clear RW/E bits; Sending Data 
  sta PORT A 
  lda #(RS | E)       ; Set E bit to send instruction 
  sta PORT A 
  lda #RS             ; Clear E bits 
  sta PORT A 
  rts 

  .org $fffc
  .word reset   ($8000)
  .word $0000

